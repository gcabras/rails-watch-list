<div class="body-container" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>'); width: 100%;
height: 700px; background-size: cover;  background-repeat: no-repeat;">
  <div class="container mb-3">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
    </div>
    <div class="col-sm-12 col-md-6 col-lg-6 order-md-last">
      <div class="container-list">
        <div class="big-title-div">
          <h1 id="list-title"><%= @list.name %></h1>
        </div>
          <div class="container-grid">
            <div class="cards-grid">
              <% @list.movies.each do |movie| %>
                  <div class="flip-card">
                    <div class="flip-card-inner">
                      <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.poster_url %>')">
                        <h4 id="title-film-card"><%=movie.title%></h4>
                      </div>
                      <div class="flip-card-back">
                        <p>
                         <%=movie.overview%>
                        </p>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
          <%= link_to raw('Add Films <i class="fas fa-film"></i>'), new_list_bookmark_path(@list), class: "main-button", id:"home-button"%>
      </div>
    </div>
  </div>
</div>
</div>
