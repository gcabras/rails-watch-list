<div class="banner" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@list.image_url%>)">
  <div class="container d-flex flex-column">
    <h1><%=@list.name%></h1>
    <div class="button d-flex flex-column align-items-center mt-3">
      <%=link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-info"%>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="card-grid-movie">
    <%@list.bookmarks.each do |bookmark|%>
        <div class="card-movie">
          <img src=<%=bookmark.movie.poster_url%>>
          <div class="card-movie-sub">
            <h1><%=bookmark.movie.title%></h1>
            <%=link_to "Delete",
                      bookmark_destroy_path(bookmark.id),
                      class: "btn btn-outline-danger",
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete the bookmark?"} %>
          </div>
          <div class="card-movie-infos">
            <div>
               <h2 class="card-movie-rating">Rating: <%=bookmark.movie.rating%></h2>
               <h3></h3>
              <p><%=bookmark.movie.overview%></p>
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>
