<div class="navbar navbar-expand-sm navbar-light navbar-watchlist">
  <div class="container-fluid">
    <a class="navbar-mybrand">
      <h3>WS.</h3>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in?%>
        <li class="nav-item active">
          <%= link_to "WS Lists", lists_path, class: "nav-mylink" %>
          <%= link_to "Home", root_path, class: "nav-mylink" %>
        </li>
        <li class="nav-item dropdown">
          <%if current_user.avatar.present?%>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%else%>
            <%= image_tag "avatar_default.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <%end%>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Your WSDashboard", dashboard_path, class:"dropdown-item"%>
              <%= link_to "Edit profile", edit_user_registration_path, class:"dropdown-item"%>
              <%#= link_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "dropdown-item text-decoration-none"%>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
