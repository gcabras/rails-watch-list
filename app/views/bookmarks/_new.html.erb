<div class="form-new">
  <%=simple_form_for([@list, @bookmark]) do |f|%>
    <div class="form-input">
      <%= f.association :movie, include_hidden: false, input_html: { data: {controller: "tomselect", tom_select_options_value: {tags: true} } } %>
